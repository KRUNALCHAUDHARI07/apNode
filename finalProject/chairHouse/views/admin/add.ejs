<body>
    <%- include('header'); -%>

        
<!-- !PAGE CONTENT! -->
<div class="w3-main " style="margin-left:300px">
    
  <!-- Contact Section -->
  <div class="w3-container w3-padding-large w3-grey">
    <h1 id="contact"><b>Add Product</b></h4>
    <div class="w3-row-padding w3-center w3-padding-24" style="margin:0 -16px">
      <div class="w3-third w3-dark-grey">
        <p><i class="fa fa-envelope w3-xxlarge w3-text-light-grey"></i></p>
        <p>chairhouse@email.com</p>
      </div>
      <div class="w3-third w3-teal">
        <p><i class="fa fa-map-marker w3-xxlarge w3-text-light-grey"></i></p>
        <p>Gujrat, India</p>
      </div>
      <div class="w3-third w3-dark-grey">
        <p><i class="fa fa-phone w3-xxlarge w3-text-light-grey"></i></p>
        <p>512312311</p>
      </div>
    </div>
    <hr class="w3-opacity">
    <form id="formLogin" method="POST" action="/users/addProduct" enctype="multipart/form-data" class="formLogin" class="formLogin">
      <div class="w3-section">
        <label>Product Name</label>
        <input type="text" name="pname" class="from-control w3-input w3-border" required  >
      </div>
      <div class="w3-section">
        <label>Product Description</label>
        <textarea name="pdisc" class="from-control w3-input w3-border" required></textarea>
      </div>
      <div class="w3-section">
        <label>Product Image</label>
        <input type="file" name="p_img" class="from-control w3-input w3-border" required>
      </div>
      <div class="w3-section">
        <label>Product Price</label>
        <input type="number" class="from-control w3-input w3-border" name="price" required  >
      </div>
      <button type="submit" class="w3-button w3-black w3-margin-bottom"></i>Add</button>
    </form>
  </div>
     
            </div>
    </body>
